<body class="login-page-bg-color text-white">

    <div class="login-logo">
        <img class="login-img" src="images/icon.svg" alt="icon logo">
        <p class="login-brand">Musing</p>
    </div>
    

    <section id="formbox-sign-up"> 

        <div id="login-form">
            <h2 class="padding-10 display-4">Login</h2>
            <form action="/reallogin" method="post">
                <div class="login-email field-group">
                    <label for="email">Email</label>
                    <input type="email" class="email form-control">
                </div>
                <div class="login-password field-group">
                    <label for="password">Password</label>
                    <input type="password" class="password form-control">
                </div>
                
            </form>

            <p class="padding-10">Don't have an account? <a href="#" id="register-link">Sign up</a></p>
            <button type="submit" class="auth-button btn btn-light sign-up-button">Login</button>
            
            <div class="buttons">
                <button class="logo-button">
                    <img src="images/spotify.png" alt="spotify icon">
                    Spotify
                </button>
                <button class="logo-button">
                    <img src="images/google.png" alt="google icon">
                    Google
                </button>
            </div>
        </div>

        <div id="register-form">
            <h2 class="padding-10 display-4">Sign Up</h2>
            <form action="/reallogin" method="post">
                <div class="sign-up-username field-group">
                    <label for="username">Username</label>
                    <input type="username" class="username form-control">
                </div>
                <div class="sign-up-email field-group">
                    <label for="email">Email</label>
                    <input type="email" class="email form-control">
                </div>
                <div class="sign-up-password field-group">
                    <label for="password">Password</label>
                    <input type="password" class="password form-control">
                </div>
                <div class="sign-up-retype-password field-group">
                    <label for="password">Retype Password</label>
                    <input type="password" class="retype-password form-control">
                </div>
                
            </form>

            <p class="padding-10">Already have an account? <a href="#" id="login-link">Login</a></p>
            <button type="submit" class="auth-button btn btn-light sign-up-button">Sign Up</button>

            <div class="buttons">
                <button class="logo-button">
                    <img src="images/spotify.png" alt="spotify icon">
                    Spotify
                </button>
                <button class="logo-button">
                    <img src="images/google.png" alt="google icon">
                    Google
                </button>
            </div>

        </div>





    </section>

