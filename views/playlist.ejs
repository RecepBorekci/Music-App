    <h2 style="color: #fff">Your Playlists</h2>
    <br />
    <div class="playlist-items row">
      <% try { %>
        <% for(var i = 0; i < items.length; i++) { %>
          <% var uri = items[i].uri; %>
          <div class="playlist-item">
            <a href="/playlist/<%=items[i].id%>">
              <img src=<%= items[i].images[0].url %> alt="playlists" class="playlist-item-image" />
              <div class="playlist-item-body">
                <h1 class="playlist-item-title"><%= items[i].name %></h1>
                <p class="playlist-item-subtitle"><%= items[i].tracks.total %> songs</p>
                <form class="playlist-playback-control" action="/playlist" method="post">
                  <input type="hidden" name="playlist_id" value="<%= items[i].id %>">
                  <button id="previousButton" class="playlist-item-button button-previous" type="submit" name="skipButton" value="previous">
                    <i class="fa-solid fa-backward"></i>
                  </button>
                  <button class="playlist-item-button" type="submit" name="playlist_uri" value="<%= uri %>">
                    <div>
                      <% if (is_playing && playlist_id === items[i].id) { %>
                        <i class="fa-solid fa-pause"></i>
                      <% } else { %>
                        <i class="fa-solid fa-play"></i>
                      <% } %>
                    </div>
                  </button>
                  <button id="nextButton" class="playlist-item-button button-next" type="submit" name="skipButton" value="next">
                    <i class="fa-solid fa-forward"></i>
                  </button>
                </form>
              </div>
            </a>
          </div>
        <% } %>
      <% } catch (error) { %>
        <% console.log(error); %>
      <% } %>
      
    </div>
</div>

<%- include("partials/footer", { is_playing: is_playing }) %>
